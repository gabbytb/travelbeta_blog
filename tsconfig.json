{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,   // Allow JavaScript files
    "checkJs": false,   // Do not type-check JavaScript
    "skipLibCheck": true,
    "strict": true,    // Enforce TypeScript rules for .tsx, but not .jsx
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]    // To import Button inside src/componenets/Button, use "@/components/Button";
    }
  },
  "include": [    // Tells TypeScript which files to check.
      "next-env.d.ts",    // A special file generated by Next.js to ensure TypeScript has the correct types.
      "**/*.ts",    // Include all TypeScript files (.ts) anywhere in the project.
      "**/*.tsx",   // Include all React TypeScript files (.tsx).
      "**/*.js",    // Include all JavaScript files (.ts) anywhere in the project.
      "**/*.jsx",   // Include all React JavaScript files (.jsx).
      ".next/types/**/*.ts",    // Include Next.js generated types for better TypeScript support.
      "src/**/*"    // EXPLICITLY DEFINED
  ],
  "exclude": ["node_modules"]
}
